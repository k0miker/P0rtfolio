import "../css/fonts.css";
import "../css/darkmode.css";
---

<footer class="footer" id="page-footer">
  <div class="footer-content">
    <!-- Adaptiver Scroll-Button, der sich je nach Position ändert -->
    <div class="scroll-button">
      <a href="#contact" id="scroll-action" class="">
        <div id="scroll-text">/down</div>
        <div id="scroll-icon"><i class="fa-solid fa-arrow-down"></i></div>
      </a>
    </div>

    <!-- Social Icons -->
    <div class="social-icons footer-item">
      <ul>
        <li><a href="https://www.facebook.com/k0miker/" target="_blank" rel="noopener"><i class="fab fa-facebook-f"></i></a></li>
        <li><a href="https://discord.gg/4PnZUY2DQe" target="_blank" rel="noopener"><i class="fab fa-discord"></i></a></li>
        <li><a href="https://www.linkedin.com/in/k0miker/" target="_blank" rel="noopener"><i class="fab fa-linkedin-in"></i></a></li>
        <li><a href="https://www.instagram.com/k0miker/" target="_blank" rel="noopener"><i class="fab fa-instagram"></i></a></li>
        <li><a href="https://github.com/k0miker/k0miker" target="_blank" rel="noopener"><i class="fab fa-github"></i></a></li>
        <li><a href="https://codepen.io/k0miker" target="_blank" rel="noopener"><i class="fab fa-codepen"></i></a></li>
      </ul>
    </div>
      
    <!-- Copyright -->
    <div class="copyright footer-item">
      <p class="text-[mono]">© 2024 Colin Blome</p>
    </div>
      
    <div class="impressum-container footer-item">
      <a href="/impressum" class="impressum-link">Impressum</a>
    </div>
  </div>
</footer>

<style>
  .footer {
    background-color: var(--bg-primary);
    color: var(--text-primary);
    padding: 0.75rem 1rem;
    width: 100%;
    position: fixed;
    height: 40px;
    bottom: 0;
    left: 0;
    z-index: 2;
    transition: all 0.4s cubic-bezier(0.165, 0.84, 0.44, 1);
    box-shadow: 0 -5px 15px rgba(0, 0, 0, 0.1);
  }
  
  /* Expandierter Footer - bleibt jetzt fixed */
  .footer.expanded {
    position: fixed; /* Wichtig: bleibt fixed statt relative */
    height: 100px;
    padding: 0.75rem 1rem;
    box-shadow: 0 -5px 15px rgba(0, 0, 0, 0.1);
    /* Setzt den Footer ans Ende vom Viewport ohne den Inhalt zu überlagern */
    bottom: 0;
    z-index: 10; /* Höherer z-index für bessere Sichtbarkeit */
  }
  
  /* Separates Timing für collapse - schneller */
  .footer.collapsing {
    transition: all 0.2s cubic-bezier(0.6, 0.04, 0.98, 0.335);
  }
  
  .footer-content {
    display: flex;
    justify-content: space-between;
    align-items: center;
    max-width: 1200px;
    margin: 0 auto;
    width: 100%;
    height: 100%;
    position: relative;
  }
  
  .footer-item {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 30%;
    transition: all 0.6s cubic-bezier(0.34, 1.56, 0.64, 1);
    position: relative;
  }
  
  /* Animation für Icons im expandierten Zustand */
  .footer.expanded .footer-content{
    flex-direction: column;
    align-items: center;
    gap: 0.8rem;
    justify-content: flex-start;
    padding: 0.5rem 0;
   
  }

  /* Social Icons */
  .social-icons ul {
    list-style: none;
    padding: 0;
    margin: 0;
    display: flex;
    gap: 0.75rem;
  }

  .footer ul li:hover a i {
    color: var(--text-titel);
    background-color: var(--bg-secondary);
    transform: translateY(-10px) translatex(4px) rotate(-5deg) skew(5deg);
    box-shadow: -4px 4px rgb(255, 99, 71);
  }
  
  i {
    padding: 0.5rem;
    border-radius: 5px;
    transition: all 0.3s ease;
  }

  .social-icons ul li a:hover i {
    color: var(--accent);
  }

  /* Copyright */
  .copyright {
    font-size: 0.8rem;
    text-align: center;
    flex-grow: 1;
  }

  /* Impressum Link */
  .impressum-link {
    font-size: 0.9rem;
    color: var(--text-primary);
    text-decoration: none;
    transition: color 0.3s ease;
    padding: 0 0.75rem;
  }

  .impressum-link:hover {
    color: var(--accent);
  }

  /* Adaptiver Scroll-Button */
  .scroll-button {
    display: flex;
    justify-content: center;
    z-index: 10;
    position: absolute;
    top: -30px;
    left: 50%;
    transform: translateX(-50%);
    transition: all 0.5s cubic-bezier(0.34, 1.56, 0.64, 1);   
  }
  
  .footer.expanded .scroll-button {
    top: -30px;
    transform: translateX(-50%) scale(1.1);
  }

  .scroll-button a {
    color: var(--text-secondary);
    background-color: var(--bg-primary);
    height: 20px;
    width: 75px;
    font-family: inter;
    font-size: 16px;
    font-weight: 600;
    border-radius: 0.5em 0.5em 0 0;
    display: flex;
    align-items: center;
    justify-content: center;
    overflow: hidden;
    position: relative;
    cursor: pointer;
    transition: all 1s;
    flex-direction: column;
    box-shadow: 0 -5px 15px rgba(0, 0, 0, 0.1);
  }

  .scroll-button a div {
    padding: 5px;
  }

  .scroll-button a:hover {
    transform: translateY(-2px);
  }

  .scroll-button a:hover div {
    color: tomato;
  }

  #scroll-icon {
    display: none;
  }
  
  .scroll-button a:hover #scroll-text {
    display: none;
  }

  .scroll-button a:hover #scroll-icon {
    display: block;
  }

  @media (max-width: 768px) {
    .social-icons ul {
      gap: 0.1rem;
    }

    .social-icons ul li a i {
      font-size: 0.8rem;
      padding: 2px;
    }

    .copyright {
      font-size: 0.6rem;
      width: 25%;
    }

    .impressum-link {
      font-size: 0.7rem;
    }

    .scroll-button a {
      width: 55px;
      font-size: 12px;
    }
    
    .footer-content {
      justify-content: space-between;
      padding: 0 5px;
    }
    
    .footer-item {
      width: auto;
      min-width: unset;
    }
  }
  
  @media (max-width: 480px) {
    .social-icons ul {
      gap: 0.05rem;
    }
    
    .social-icons ul li a i {
      font-size: 0.7rem;
      padding: 1px;
    }
    
    .footer.expanded .footer-content {
      flex-direction: column;
      align-items: center;
      gap: 0.5rem;
    }
    
    .footer.expanded {
      height: 120px;
    }
  }
</style>

<script>
  // Extend Window interface to include lastScrollY
  declare global {
    interface Window {
      lastScrollY: number;
    }
  }

  document.addEventListener('DOMContentLoaded', () => {
    const footer = document.getElementById('page-footer');
    const scrollAction = document.getElementById('scroll-action');
    const scrollText = document.getElementById('scroll-text');
    const scrollIcon = document.querySelector('#scroll-icon i');
    let isExpanded = false;
    
    // Funktion zur Anpassung des Scroll-Buttons basierend auf der Scroll-Position
    function updateScrollButton() {
      const scrollY = window.scrollY || window.pageYOffset;
      const windowHeight = window.innerHeight;
      
      // Wenn mehr als 30% der Viewport-Höhe gescrollt wurde, zeige "up" statt "down"
      if (scrollY > windowHeight * 0.3) {
        scrollAction.setAttribute('href', '#home');
        scrollText.textContent = '/up';
        scrollIcon.className = 'fa-solid fa-arrow-up';
      } else {
        scrollAction.setAttribute('href', '#contact');
        scrollText.textContent = '/down';
        scrollIcon.className = 'fa-solid fa-arrow-down';
      }
    }
    
    // Funktion zur Überprüfung, ob wir uns am Ende der Seite befinden
    function checkBottom() {
      const scrollY = window.scrollY || window.pageYOffset;
      const windowHeight = window.innerHeight;
      const documentHeight = document.documentElement.scrollHeight;
      const bottomThreshold = 50; // Pixel vom unteren Rand
      
      // Berechne, wie viel vom Dokument noch zu scrollen ist
      const remainingScroll = documentHeight - (scrollY + windowHeight);
      
      // Wenn der Benutzer nahe genug am Ende der Seite ist
      if (remainingScroll <= bottomThreshold) {
        if (!isExpanded) {
          footer.classList.remove('collapsing');
          footer.classList.add('expanded');
          isExpanded = true;
          
          // Wenn der Footer expandiert wird, stelle sicher, dass er sichtbar ist
          setTimeout(() => {
            window.scrollTo({
              top: document.documentElement.scrollHeight,
              behavior: 'smooth'
            });
          }, 50);
        }
      } else {
        // Wenn der Benutzer nicht mehr am Ende ist - schneller Übergang
        if (isExpanded) {
          footer.classList.add('collapsing');
          footer.classList.remove('expanded');
          setTimeout(() => {
            footer.classList.remove('collapsing');
          }, 200);
          isExpanded = false;
        }
      }
      
      // Aktualisiere den Button-Status bei diesem Check
      updateScrollButton();
    }
    
    // Scroll-Event mit verkürztem Debounce für bessere Performance
    let scrollTimeout: number | null = null;
    window.addEventListener('scroll', () => {
      if (scrollTimeout) {
        clearTimeout(scrollTimeout);
      }
      
      // Sofortige Prüfung beim Hochscrollen
      const isScrollingUp = window.lastScrollY > window.scrollY;
      window.lastScrollY = window.scrollY;
      
      if (isScrollingUp && isExpanded) {
        // Beim Hochscrollen sofort prüfen
        checkBottom();
      } else {
        // Bei normalem Scrollen kleine Verzögerung
        scrollTimeout = setTimeout(checkBottom, 50) as unknown as number;
      }
      
      // Aktualisiere den Button-Status bei jedem Scroll
      updateScrollButton();
    }, { passive: true });
    
    // Speichern der letzten Scroll-Position für Richtungserkennung
    window.lastScrollY = window.scrollY || 0;
    
    // Größenänderung überwachen
    window.addEventListener('resize', checkBottom);
    
    // Initial prüfen
    setTimeout(() => {
      updateScrollButton();
      checkBottom();
    }, 500);

    // Smooth Scroll für den Button
    const scrollButton = document.querySelector('#scroll-action');
    if (scrollButton) {
      scrollButton.addEventListener('click', function(e) {
        e.preventDefault();
        
        const targetId = this.getAttribute('href');
        const targetElement = document.querySelector(targetId);
        
        if (targetElement) {
          targetElement.scrollIntoView({
            behavior: 'smooth',
            block: 'start'
          });
        }
      });
    }
  });
</script>
