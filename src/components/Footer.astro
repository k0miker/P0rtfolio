  <style>
    .ugly {
      display: flex;
      padding: 5px;
      border-radius: 10px;
      border: 2px grey solid;
      display: inline-block;
    }
    .footer {
      background-color: #333;
      padding: 1rem;
      height: 200px;
      text-align: center;
    }

    .footer ul {
      list-style: none;
      padding: 0;
      margin: 0;
      display: flex;
      justify-content: center;
      gap: 1rem;
    }

    .footer ul li {
      display: inline-block;
    }

    .footer ul li a {
      color: white;
      text-decoration: none;
      font-size: 1.5rem;
      transition:
        color 0.3s,
        transform 0.3s;
    }
    .footer ul li a i {
      transition: 0.3s;
      margin: 15px;
      padding: 5px;
      opacity: 0.6;
      border-radius: 5px;
      aspect-ratio: 1;
    }
    .footer ul li:hover a i {
      color: tomato;
      opacity: 1;
      background-color: #434343;
      transform: translateY(-4px) translatex(4px);
      box-shadow: -4px 4px tomato;
    }

    .footer p {
      margin-top: 1rem;
      color: white;
      font-size: 0.9rem;
    }
    .up {
      display: flex;
      justify-content: center;

      a {
        bottom: 50px;
        width: 75px;
        height: 0px;
        position: relative;

        div {
          padding: 5px;
          background: #333333c9;
          color: rgba(255, 255, 255, 0.613);
          font-family: inter;
          font-size: 16px;
          font-weight: 800;
          border-radius: 0.5em;
          letter-spacing: 0.05em;
          display: flex;
          align-items: center;
          justify-content: center;

          cursor: pointer;
          transition: all 1s;
          flex-direction: column;

          width: 75px;
          height: 50px;
        }
      }
    }
    a:hover {
      transform: translateY(-5px);
    }
    a:hover div {
      color: tomato;
    }
    a:hover div:nth-of-type(1) {
      display: none;

      div {
        display: block;
      }
    }
    a div:nth-of-type(2) {
      display: none;
    }
    a:hover div:nth-of-type(2) {
      display: block;

      div {
        display: block;
      }
    }
  </style>
</footer>
