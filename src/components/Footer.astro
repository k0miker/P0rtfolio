<style>
  .footer {
    background-color: var(--bg-primary);
    color: var(--text-primary);
    padding: 0.75rem 1rem;
    width: 100%;
    position: fixed;
    height: 60px;
    bottom: 0;
    left: 0;
    z-index: 2;
    transition: all 0.4s cubic-bezier(0.165, 0.84, 0.44, 1);
    box-shadow: 0 -5px 15px rgba(0, 0, 0, 0.1);    
  }
  
  /* Expandierter Footer - bleibt jetzt fixed */
  .footer.expanded {
    position: fixed; /* Wichtig: bleibt fixed statt relative */
    height: auto;
    padding: 0.75rem 1rem;
    box-shadow: 0 -5px 15px rgba(0, 0, 0, 0.1);
    /* Setzt den Footer ans Ende vom Viewport ohne den Inhalt zu überlagern */
    bottom: 0;
    z-index: 10; /* Höherer z-index für bessere Sichtbarkeit */
  }
  
  /* Separates Timing für collapse - schneller */
  .footer.collapsing {
    transition: all 0.2s cubic-bezier(0.6, 0.04, 0.98, 0.335);
  }
  
  .footer-content {
    display: flex;
    justify-content: space-between;
    align-items: center;
    max-width: 1200px;
    margin: 0 auto;
    width: 100%;
    height: 100%;
    position: relative;
  }
  
  .footer-item {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 30%;
    transition: all 0.6s cubic-bezier(0.34, 1.56, 0.64, 1);
    position: relative;
  }
  
  /* Animation für Icons im expandierten Zustand */
  .footer.expanded .footer-content{
    flex-direction: column;
    align-items: center;
    gap: 0.8rem;
    justify-content: flex-start;
    padding: 0.5rem 0;
   
  }

  /* Social Icons */
  .social-icons ul {
    list-style: none;
    padding: 0;
    margin: 0;
    display: flex;
    gap:.25rem;
  }

  .footer ul li:hover a i {
    color: var(--text-titel);
    background-color: var(--bg-secondary);
    transform: translateY(-10px) translatex(4px) rotate(-5deg) skew(5deg);
    box-shadow: -4px 4px rgb(255, 99, 71);
  }
  
  i {
    padding: 0.5rem;
    border-radius: 5px;
    transition: all 0.3s ease;
    margin: 1px;
  }

  .social-icons ul li a:hover i {
    color: var(--accent);
  }

  /* Kontaktinformationen mit Klick-Anzeige */
  .contact-info {
    display: flex;
    gap: 1rem;
    align-items: center;
    font-size: 0.8rem;
  }
  
  .contact-button {
    position: relative;
    display: flex;
    align-items: center;
    cursor: pointer;
    padding: 0.1rem;
    border-radius: 6px;
    transition: all 0.3s ease;
    background-color: transparent;
    border: 1px solid transparent;
  }
  
  .contact-button i {
    font-size: 1rem;
    transition: all 0.3s ease;
  }

  .contact-button:hover {
   color: var(--text-titel);
    background-color: var(--bg-secondary);
    transform: translateY(-10px) translatex(4px) rotate(-5deg) skew(5deg);
    box-shadow: -4px 4px rgb(255, 99, 71);
  }
  
  .contact-button:hover i {
    color: var(--accent);
    animation: pulse 1s infinite;
  }
  
  @keyframes pulse {
    0% { transform: scale(1); }
    50% { transform: scale(1.1); }
    100% { transform: scale(1); }
  }
  
  .contact-reveal {
    position: absolute;
    top: -40px;
    left: 50%;
    transform: translateX(-50%) scale(0.8);
    background-color: var(--bg-secondary);
    padding: 0.4rem 0.7rem;
    border-radius: 6px;
    opacity: 0;
    visibility: hidden;
    transition: all 0.3s ease;
    white-space: nowrap;
    display: flex;
    align-items: center;
    gap: 0.5rem;
    border: 1px solid rgba(255, 99, 71, 0.2);
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.15);
  }
  
  .contact-button.active .contact-reveal {
    opacity: 1;
    visibility: visible;
    transform: translateX(-50%) scale(1);
    top: -45px;
  }

  .contact-reveal::after {
    content: '';
    position: absolute;
    bottom: -5px;
    left: 50%;
    transform: translateX(-50%);
    width: 10px;
    height: 10px;
    background-color: var(--bg-secondary);
    transform: translateX(-50%) rotate(45deg);
    border-right: 1px solid rgba(255, 99, 71, 0.2);
    border-bottom: 1px solid rgba(255, 99, 71, 0.2);
  }
  
  .email-parts, .phone-number {
    font-family: 'mono', monospace;
    letter-spacing: 0.5px;
  }
  
  .copy-btn {
    background: none;
    border: none;
    cursor: pointer;
    color: var(--text-secondary);
    font-size: 0.9rem;
    padding: 0.2rem;
    border-radius: 4px;
    transition: all 0.3s ease;
  }
  
  .copy-btn:hover {
    color: var(--accent);
  }
  
  .copy-btn.copied {
    color: #4CAF50;
  }
  
  /* Copyright */
  .copyright {
    font-size: 0.8rem;
    text-align: center;
    flex-grow: 1;
  }

  /* Impressum Link */
  .impressum-link {
    font-size: 0.9rem;
    color: var(--text-primary);
    text-decoration: none;
    transition: color 0.3s ease;
    padding: 0 0.75rem;
  }

  .impressum-link:hover {
    color: var(--accent);
  }

  /* Adaptiver Scroll-Button */
  .scroll-button {
    display: flex;
    justify-content: center;
    z-index: 10;
    position: absolute;
    top: -40px;
    left: 50%;
    transform: translateX(-50%);
    transition: transform 0.5s cubic-bezier(0.34, 1.56, 0.64, 1);
    
  }
 
  .footer.expanded .scroll-button {
    top: -30px;
    transform: translateX(-50%) scale(1.1);
  }

  .scroll-button a {
    color: var(--text-secondary);
    background-color: var(--bg-primary);
    height: 20px;
    width: 75px;
    font-family: inter;
    font-size: 16px;
    font-weight: 600;
    border-radius: 0.5em 0.5em 0 0;
    display: flex;
    align-items: center;
    justify-content: center;
    overflow: hidden;
    position: relative;
    cursor: pointer;
    transition: all .3s;
    flex-direction: column;
    padding: 20px 20px;
  }

  .scroll-button a div {
    padding: 5px;
  }

  .scroll-button a:hover {
    transform: translateY(-2px);
  }

  .scroll-button a:hover div {
    color: tomato;
  }

  #scroll-icon {
    display: none;
  }
  
  .scroll-button a:hover #scroll-text {
    display: none;
  }

  .scroll-button a:hover #scroll-icon {
    display: block;
  }

  @media (max-width: 768px) {
    .social-icons ul {
      gap: 0.1rem;
    }

    .social-icons ul li a i {
      font-size: 0.8rem;
      padding: 2px;
    }

    .copyright {
      font-size: 0.6rem;
      width: 25%;
    }

    .impressum-link {
      font-size: 0.7rem;
    }

    .scroll-button a {
      width: 55px;
      font-size: 12px;
    }
    
    .footer-content {
      justify-content: space-between;
      padding: 0 5px;
    }
    
    .footer-item {
      width: auto;
      min-width: unset;
    }
    
    .contact-info {
      display: none; /* Im Footer auf Mobilgeräten ausblenden */
    }
    
    .footer.expanded .contact-info {
      display: flex; /* Im expandierten Footer anzeigen */
    }
  }
  
  @media (max-width: 480px) {
    .social-icons ul {
      gap: 0.15rem;
    }
    
    .social-icons ul li a i {
      font-size: 0.7rem;
      padding: 1px;
    }
    
    .footer.expanded .footer-content {
      flex-direction: column;
      align-items: center;
      gap: 0.5rem;
    }
    
    .footer.expanded {
      height: 120px;
    }
  }
</style>

<script>
  // Extend Window interface to include lastScrollY
  declare global {
    interface Window {
      lastScrollY: number;
    }
  }

  document.addEventListener('DOMContentLoaded', () => {
    const footer = document.getElementById('page-footer');
    const scrollAction = document.getElementById('scroll-action');
    const scrollText = document.getElementById('scroll-text');
    const scrollIcon = document.querySelector('#scroll-icon i');
    let isExpanded = false;
    
    // Funktion zur Anpassung des Scroll-Buttons basierend auf der Scroll-Position
    function updateScrollButton() {
      const scrollY = window.scrollY || window.pageYOffset;
      const windowHeight = window.innerHeight;
      
      // Wenn mehr als 30% der Viewport-Höhe gescrollt wurde, zeige "up" statt "down"
      if (scrollY > windowHeight * 0.3) {
        scrollAction.setAttribute('href', '#home');
        scrollText.textContent = '/up';
        scrollIcon.className = 'fa-solid fa-arrow-up';
      } else {
        scrollAction.setAttribute('href', '#contact');
        scrollText.textContent = '/down';
        scrollIcon.className = 'fa-solid fa-arrow-down';
      }
    }
    
    // Funktion zur Überprüfung, ob wir uns am Ende der Seite befinden
    function checkBottom() {
      const scrollY = window.scrollY || window.pageYOffset;
      const windowHeight = window.innerHeight;
      const documentHeight = document.documentElement.scrollHeight;
      const bottomThreshold = 50; // Pixel vom unteren Rand
      
      // Berechne, wie viel vom Dokument noch zu scrollen ist
      const remainingScroll = documentHeight - (scrollY + windowHeight);
      
      // Wenn der Benutzer nahe genug am Ende der Seite ist
      if (remainingScroll <= bottomThreshold) {
        if (!isExpanded) {
          footer.classList.remove('collapsing');
          footer.classList.add('expanded');
          isExpanded = true;
          
          // Wenn der Footer expandiert wird, stelle sicher, dass er sichtbar ist
          setTimeout(() => {
            window.scrollTo({
              top: document.documentElement.scrollHeight,
              behavior: 'smooth'
            });
          }, 50);
        }
      } else {
        // Wenn der Benutzer nicht mehr am Ende ist - schneller Übergang
        if (isExpanded) {
          footer.classList.add('collapsing');
          footer.classList.remove('expanded');
          setTimeout(() => {
            footer.classList.remove('collapsing');
          }, 200);
          isExpanded = false;
        }
      }
      
      // Aktualisiere den Button-Status bei diesem Check
      updateScrollButton();
    }
    
    // Scroll-Event mit verkürztem Debounce für bessere Performance
    let scrollTimeout: number | null = null;
    window.addEventListener('scroll', () => {
      if (scrollTimeout) {
        clearTimeout(scrollTimeout);
      }
      
      // Sofortige Prüfung beim Hochscrollen
      const isScrollingUp = window.lastScrollY > window.scrollY;
      window.lastScrollY = window.scrollY;
      
      if (isScrollingUp && isExpanded) {
        // Beim Hochscrollen sofort prüfen
        checkBottom();
      } else {
        // Bei normalem Scrollen kleine Verzögerung
        scrollTimeout = setTimeout(checkBottom, 50) as unknown as number;
      }
      
      // Aktualisiere den Button-Status bei jedem Scroll
      updateScrollButton();
    }, { passive: true });
    
    // Speichern der letzten Scroll-Position für Richtungserkennung
    window.lastScrollY = window.scrollY || 0;
    
    // Größenänderung überwachen
    window.addEventListener('resize', checkBottom);
    
    // Initial prüfen
    setTimeout(() => {
      updateScrollButton();
      checkBottom();
    }, 500);

    // Smooth Scroll für den Button
    const scrollButton = document.querySelector('#scroll-action');
    if (scrollButton) {
      scrollButton.addEventListener('click', function(e) {
        e.preventDefault();
        
        const targetId = this.getAttribute('href');
        const targetElement = document.querySelector(targetId);
        
        if (targetElement) {
          targetElement.scrollIntoView({
            behavior: 'smooth',
            block: 'start'
          });
        }
      });
    }
    
    // Kontaktelemente mit Klick-Anzeige und direkter Aktion
    const contactButtons = document.querySelectorAll('.contact-button');
    contactButtons.forEach(button => {
      button.addEventListener('click', function(e) {
        // Direkte Aktion beim Klick auf den Button
        if (this.classList.contains('email-button')) {
          window.location.href = 'mailto:info@colinblome.dev';
          return; // Früher zurückkehren, um das Popup nicht anzuzeigen
        } else if (this.classList.contains('phone-button')) {
          window.location.href = 'tel:+4917360983320';
          return; // Früher zurückkehren, um das Popup nicht anzuzeigen
        }
        
        // Rest des Codes nur ausführen, wenn wir nicht auf den Button selbst geklickt haben
        // Andere offene Kontaktbuttons schließen
        contactButtons.forEach(otherButton => {
          if (otherButton !== button) {
            otherButton.classList.remove('active');
          }
        });
        
        // Toggle für aktiven Zustand
        this.classList.toggle('active');
      });
    });
    
    // Außerhalb klicken, um zu schließen
    document.addEventListener('click', function(e) {
      const target = e.target as HTMLElement;
      const isOutsideContact = !target.closest('.contact-button');
      if (isOutsideContact) {
        contactButtons.forEach(button => {
          button.classList.remove('active');
        });
      }
    });
    
    // Kopieren-Funktionalität
    const copyButtons = document.querySelectorAll('.copy-btn');
    copyButtons.forEach(button => {
      button.addEventListener('click', function(e) {
        e.stopPropagation(); // Verhindern, dass der kontaktbutton-Click ausgelöst wird
        
        const textToCopy = this.getAttribute('data-copy');
        navigator.clipboard.writeText(textToCopy).then(() => {
          // Visuelle Bestätigung
          this.classList.add('copied');
          const originalIcon = this.innerHTML;
          this.innerHTML = '<i class="fas fa-check"></i>';
          
          setTimeout(() => {
            this.classList.remove('copied');
            this.innerHTML = originalIcon;
          }, 2000);
        });
      });
    });
    
    // E-Mail und Telefon Links öffnen bei Klick auf die Inhalte
    const emailParts = document.querySelector('.email-parts');
    if (emailParts) {
      emailParts.addEventListener('click', (e) => {
        e.stopPropagation();
        window.location.href = 'mailto:info@colinblome.dev';
      });
    }
    
    const phoneNumber = document.querySelector('.phone-number');
    if (phoneNumber) {
      phoneNumber.addEventListener('click', (e) => {
        e.stopPropagation();
        window.location.href = 'tel:+4917360983320';
      });
    }
  });
</script>
