  .footer ul li {
    display: inline-block;
  }

  .footer ul li a {
    color: white;
    text-decoration: none;
    font-size: 1.5rem;
    transition:
      color 0.3s,
      transform 0.3s;
  }
  .footer ul li a i{
    transition: 0.3s;
    margin: 15px;
    padding: 5px;
    opacity: .6;
    border-radius: 5px;
    aspect-ratio: 1;
  }
  .footer ul li:hover a i{
    color: tomato;    
    opacity: 1;
    background-color: #434343;
    transform:translateY(-4px) translatex( 4px);    
    box-shadow: -4px 4px tomato;

  }

  .footer p {
    margin-top: 1rem;
    color: white;
    font-size: 0.9rem;
  }
