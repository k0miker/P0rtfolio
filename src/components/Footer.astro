<style>
  .footer {
    background-color: #333;
    padding: 1rem;
    text-align: center;
  }

  .footer ul {
    list-style: none;
    padding: 0;
    margin: 0;
    display: flex;
    justify-content: center;
    gap: 1rem;
  }

  .footer ul li {
    display: inline-block;
  }

  .footer ul li a {
    color: white;
    text-decoration: none;
    font-size: 1.5rem;
    transition:
      color 0.3s,
      transform 0.3s;
  }
  .footer ul li a i {
    transition: .5s;
    margin: 15px;
    padding: 5px;
    outline: 2px solid white;
    border-radius: 5px;
    aspect-ratio: 1;
  }
  .footer ul li a i:hover {
    color: tomato;
    scale: 2;
    /* rotate: 360deg; */
    outline-style: dashed;
   
  }

  .footer p {
    margin-top: 1rem;
    color: white;
    font-size: 0.9rem;
  }
