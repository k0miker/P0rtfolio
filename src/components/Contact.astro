---
import "../css/fonts.css";
import Button from "./Button.astro";
---

<section class="flex flex-col items-center content-center h-[80vh]">
  <form action="submit" method="post">
    <h1 class="font-[marker] mb-8 text-2xl">Get in touch</h1>
    <div class="input-group">
      <input
        required
        type="text"
        name="name"
        autocomplete="off"
        class="input"
      />
      <label class="user-label">First Name</label>
    </div>
    <div class="input-group">
      <input
        required
        type="email"
        name="email"
        autocomplete="off"
        class="input"
      />
      <label class="user-label">E-Mail</label>
    </div>
    <div class="input-group">
      <textarea required name="text" rows="5" autocomplete="off" class="input" 
      ></textarea>
      <label class="user-label">Message</label>
    </div>
    <Button />
  </form>
</section>
<style>
  section {
    align-items: center;
    justify-content: center;
    height: 90vh;
  }
  form {
    width: 100%;
    padding: 25px;

    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    background-color: rgba(255, 255, 255, 0.829);
    h1 {
      color: #263442c0;
    }
  }
  .input-group {
    position: relative;
    margin: 15px;
  }

  .input{
    border: solid 1.5px #9e9e9e;
    border-radius: 1rem;
    background: #2121211a;
    padding: 1rem;
    padding-left: 2rem;
    font-size: 1rem;
    color: #21212170;
    transition: border 150ms cubic-bezier(0.4, 0, 0.2, 1);
  }
  textarea {
    border: solid 1.5px #9e9e9e;
    border-radius: 1rem;
    background: #2121211a;
    padding: 1rem;
    padding-left: 2rem;
    font-size: 1rem;
    color: #21212170;
    transition: border 150ms cubic-bezier(0.4, 0, 0.2, 1);
  }
  .user-label {
    position: absolute;
    left: 85px;
    
    color: #21212170;
    pointer-events: none;
    font-family: Marker;
    transform: translateY(1rem);
    transition: 150ms cubic-bezier(0.4, 0, 0.2, 1);
  }

  .input:focus,
  .input:valid {
    outline: none;
    outline: 2px solid #1a73e8;
  }

  .input:focus ~ label,
  .input:valid ~ label {
    transform: translatey(-110%) translateX(-85px);
    
    background-color: #21212100;
    padding: 0 0.2em;
    color: #21212170;
  }
  .input, textarea:invalid {
    outline: 2px solid red;
  }
</style>
