---
// CookieConsent.astro - DSGVO-konformes Cookie-Banner mit Fokus auf deutsche Anforderungen
---

<!-- Cookie-Overlay, das die Seite blockiert -->
<div id="cookie-overlay" class="cookie-overlay">
  <div class="overlay-message">
    <i class="fa-solid fa-cookie-bite fa-2x"></i>
    <h2>Bitte Cookie-Einstellungen wählen</h2>
    <p>Um fortzufahren, treffen Sie bitte eine Auswahl bezüglich der Cookie-Einstellungen.</p>
  </div>
</div>

<div id="cookie-consent" class="cookie-banner">
  <div class="cookie-content">
    <!-- Einfache Ansicht (Standard) -->
    <div id="simple-view" class="cookie-view active">
      <div class="cookie-header">
        <h3>Datenschutzeinstellungen</h3>
        <button id="cookie-close" aria-label="Schließen">
          <i class="fa-solid fa-xmark"></i>
        </button>
      </div>
      
      <p>
        Diese Website verwendet Google Analytics, um die Nutzererfahrung zu verbessern.
        Weitere Informationen finden Sie in unserer
        <a href="/datenschutz">Datenschutzerklärung</a>.
      </p>
      
      <div class="cookie-actions simple-actions">
        <button id="accept-all-cookies" class="btn-primary">Alle akzeptieren</button>
        <button id="only-essential-cookies" class="btn-text">Nur notwendige</button>
        <button id="show-settings" class="btn-secondary">Einstellungen</button>
      </div>
    </div>
    
    <!-- Cookie-Banner mit erweiterter Ansicht -->
    <div id="advanced-view" class="cookie-view">
      <div class="cookie-header">
        <h3>Cookie-Einstellungen anpassen</h3>
        <button id="back-to-simple" aria-label="Zurück">
          <i class="fa-solid fa-arrow-left"></i>
        </button>
      </div>
      
      <p>
        Hier können Sie entscheiden, welche Cookies Sie zulassen möchten. 
        Notwendige Cookies sind für die Funktionalität der Website erforderlich.
      </p>
      
      <div class="consent-options">
        <div class="option">
          <input type="checkbox" id="essential-cookies" checked disabled />
          <label for="essential-cookies">Notwendige Cookies <span>(immer aktiv)</span></label>
        </div>
        
        <div class="option">
          <input type="checkbox" id="analytics-cookies" />
          <label for="analytics-cookies">Analyse-Cookies <span>(Google Analytics)</span></label>
          <div class="option-description">
            Helfen uns zu verstehen, wie Besucher unsere Website nutzen.
          </div>
        </div>
      </div>
      
      <div class="cookie-actions advanced-actions">
        <button id="save-cookie-settings" class="btn-secondary">Auswahl speichern</button>
        <button id="reject-all-cookies" class="btn-text">Nur Notwendige</button>
      </div>
    </div>
  </div>
</div>

<style>
  /* Cookie-Overlay-Styles */
  .cookie-overlay {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: rgba(0, 0, 0, 0.8);
    backdrop-filter: blur(5px);
    z-index: 9990; /* Niedriger als das Cookie-Banner */
    display: flex;
    justify-content: center;
    align-items: center;
    opacity: 0;
    pointer-events: none;
    transition: opacity 0.4s ease;
  }
  
  .cookie-overlay.visible {
    opacity: 1;
    pointer-events: all;
  }
  
  .overlay-message {
    background-color: var(--bg-primary);
    border: 1px solid var(--border);
    border-radius: 10px;
    padding: 2rem;
    text-align: center;
    max-width: 500px;
    margin: 0 1rem;
    box-shadow: 0 10px 25px rgba(0, 0, 0, 0.2);
  }
  
  .overlay-message i {
    color: var(--accent);
    margin-bottom: 1rem;
  }
  
  .overlay-message h2 {
    font-family: 'mono', monospace;
    color: var(--text-titel);
    margin-bottom: 1rem;
    font-size: 1.5rem;
  }
  
  .overlay-message p {
    color: var(--text-primary);
    font-family: 'Inter', sans-serif;
    line-height: 1.5;
  }

  /* Cookie-Banner-Styles */
  .cookie-banner {
    position: fixed;
    bottom: 0;
    left: 0;
    width: 100%;
    background-color: var(--bg-primary);
    box-shadow: 0 -5px 15px rgba(0, 0, 0, 0.1);
    z-index: 9999; /* Höher als das Overlay */
    padding: 1rem;
    border-top: 1px solid var(--border);
    transform: translateY(100%);
    transition: transform 0.4s ease-in-out;
    font-family: 'Inter', sans-serif;
  }
  
  .cookie-banner.visible {
    transform: translateY(0);
  }
  
  .cookie-content {
    max-width: 800px;
    margin: 0 auto;
    position: relative;
  }
  
  .cookie-view {
    display: none;
    opacity: 0;
    transition: opacity 0.3s ease;
    padding: 1rem;
  }
  
  .cookie-view.active {
    display: block;
    opacity: 1;
  }
  
  .cookie-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 1rem;
  }
  
  .cookie-header h3 {
    color: var(--text-titel);
    margin: 0;
    font-size: 1.3rem;
  }
  
  #cookie-close, #back-to-simple {
    background: none;
    border: none;
    color: var(--text-primary);
    font-size: 1.2rem;
    cursor: pointer;
    padding: 0.3rem;
    transition: color 0.3s ease;
  }
  
  #cookie-close:hover, #back-to_simple:hover {
    color: var(--accent);
  }
  
  .cookie-banner p {
    margin-bottom: 1.2rem;
    line-height: 1.5;
    color: var(--text-primary);
  }
  
  .cookie-banner a {
    color: var(--accent);
    text-decoration: underline;
  }
  
  .consent-options {
    margin-bottom: 1.5rem;
  }
  
  .option {
    display: flex;
    flex-wrap: wrap;
    align-items: center;
    margin-bottom: 0.8rem;
  }
  
  .option input {
    margin-right: 0.8rem;
    accent-color: var(--accent);
    width: 1.2rem;
    height: 1.2rem;
  }
  
  .option label {
    font-weight: 500;
    color: var(--text-primary);
  }
  
  .option label span {
    font-weight: normal;
    font-size: 0.9rem;
    color: var(--text-secondary);
    margin-left: 0.3rem;
  }
  
  .option-description {
    padding-left: 2rem;
    width: 100%;
    margin-top: 0.3rem;
    font-size: 0.85rem;
    color: var(--text-secondary);
  }
  
  .cookie-actions {
    display: flex;
    flex-wrap: wrap;
    gap: 1rem;
    margin-top: 1rem;
  }
  
  .simple-actions {
    justify-content: center;
  }
  
  .advanced-actions {
    justify-content: space-between;
  }
  
  .btn-primary {
    background-color: var(--accent);
    color: white;
    border: none;
    border-radius: 5px;
    padding: 0.7rem 1.2rem;
    cursor: pointer;
    font-weight: 500;
    transition: background-color 0.3s;
  }
  
  .btn-primary:hover {
    background-color: var(--accent-dark, #e94c30);
  }
  
  .btn-secondary {
    background-color: var(--bg-secondary);
    color: var(--text-titel);
    border: 1px solid var(--border);
    border-radius: 5px;
    padding: 0.7rem 1.2rem;
    cursor: pointer;
    font-weight: 500;
    transition: all 0.3s;
  }
  
  .btn-secondary:hover {
    background-color: var(--bg-tertiary);
    color: var(--accent);
  }
  
  .btn-text {
    background: none;
    color: var(--text-secondary);
    border: none;
    padding: 0.7rem 1.2rem;
    cursor: pointer;
    font-weight: 500;
    transition: color 0.3s;
  }
  
  .btn-text:hover {
    color: var(--accent);
    text-decoration: underline;
  }
  
  @media (max-width: 768px) {
    /* Cookie-Overlay auf mobilen Geräten anpassen */
    .cookie-overlay {
      background-color: rgba(0, 0, 0, 0.95);
      backdrop-filter: blur(10px);
      z-index: 9998;
    }

    .overlay-message {
      display: none; /* Verstecke die Overlay-Nachricht auf mobilen Geräten */
    }

    /* Cookie-Banner auf mobilen Geräten als zentriertes Modal darstellen */
    .cookie-banner {
      position: fixed;
      top: 50%;
      left: 50%;
      right: auto;
      bottom: auto;
      transform: translate(-50%, -50%);
      width: 95%;
      max-width: 420px;
      border-radius: 16px;
      padding: 1.5rem;
      box-shadow: 
        0 20px 50px rgba(0,0,0,0.5),
        0 10px 20px rgba(0,0,0,0.3);
      background-color: var(--bg-primary);
      z-index: 9999;
      max-height: 85vh;
      overflow-y: auto;
      border: 1px solid var(--border);
      /* Entferne die Standard-Transform-Animation für mobile */
      transition: opacity 0.3s ease, transform 0.3s ease;
    }

    /* Initialer Zustand für mobile Animation */
    .cookie-banner:not(.visible) {
      opacity: 0;
      transform: translate(-50%, -50%) scale(0.9);
      pointer-events: none;
    }

    /* Bei sichtbarem Banner */
    .cookie-banner.visible {
      opacity: 1;
      transform: translate(-50%, -50%) scale(1) !important;
      pointer-events: all;
    }
    
    .cookie-content {
      padding: 0.5rem;
      max-width: 100%;
    }

    .cookie-view {
      padding: 0.5rem 0;
    }

    .cookie-header {
      margin-bottom: 1.5rem;
    }

    .cookie-header h3 {
      font-size: 1.2rem;
      line-height: 1.3;
    }

    /* Buttons untereinander und full-width für bessere Bedienbarkeit auf Touch-Geräten */
    .cookie-actions {
      flex-direction: column;
      gap: 0.8rem;
      margin-top: 1.5rem;
    }

    .btn-primary, .btn-secondary, .btn-text {
      width: 100%;
      padding: 0.9rem 1.2rem;
      font-size: 0.95rem;
      border-radius: 8px;
    }

    .btn-primary {
      order: 1; /* Alle akzeptieren zuerst */
    }

    .btn-text {
      order: 2; /* Nur notwendige zweite */
    }

    .btn-secondary {
      order: 3; /* Einstellungen zuletzt */
    }

    .advanced-actions {
      flex-direction: column;
    }

    .advanced-actions .btn-secondary {
      order: 1; /* Auswahl speichern zuerst */
    }

    .advanced-actions .btn-text {
      order: 2; /* Nur notwendige zweite */
    }

    /* Consent Options auf mobile anpassen */
    .consent-options {
      margin: 1rem 0;
    }

    .option {
      margin-bottom: 1rem;
      padding: 1rem;
      background-color: var(--bg-secondary);
      border-radius: 8px;
    }

    .option-description {
      margin-top: 0.5rem;
      font-size: 0.85rem;
    }

    /* Touch-optimierte Checkbox-Größe */
    .option input[type="checkbox"] {
      width: 20px;
      height: 20px;
      margin-right: 1rem;
    }

    .option label {
      font-size: 0.95rem;
      line-height: 1.4;
    }
  }
</style>

<script lang="js">

  document.addEventListener('DOMContentLoaded', () => {
    const cookieBanner = document.getElementById('cookie-consent');
    const cookieOverlay = document.getElementById('cookie-overlay');
    const acceptAllBtn = document.getElementById('accept-all-cookies');
    const onlyEssentialBtn = document.getElementById('only-essential-cookies');
    const saveSettingsBtn = document.getElementById('save-cookie-settings');
    const rejectAllBtn = document.getElementById('reject-all-cookies');
    const closeBtn = document.getElementById('cookie-close');
    const showSettingsBtn = document.getElementById('show-settings');
    const backToSimpleBtn = document.getElementById('back-to-simple');
    const simpleView = document.getElementById('simple-view');
    const advancedView = document.getElementById('advanced-view');
    const analyticsCheckbox = document.getElementById('analytics-cookies');
    
    // Null-Check für DOM-Elemente
    if (!cookieBanner || !cookieOverlay || !acceptAllBtn || !onlyEssentialBtn || !saveSettingsBtn || !rejectAllBtn || 
        !closeBtn || !analyticsCheckbox || !showSettingsBtn || 
        !backToSimpleBtn || !simpleView || !advancedView) {
      console.error('Cookie-Banner-Elemente konnten nicht gefunden werden');
      return;
    }
    
    // Wechsel zwischen einfacher und erweiterter Ansicht
    showSettingsBtn.addEventListener('click', () => {
      simpleView.classList.remove('active');
      advancedView.classList.add('active');
    });
    
    backToSimpleBtn.addEventListener('click', () => {
      advancedView.classList.remove('active');
      simpleView.classList.add('active');
    });
    
    // Cookie-Banner und Overlay anzeigen, wenn keine Einstellungen gespeichert sind
    const consentSaved = localStorage.getItem('cookie-consent');
    if (!consentSaved) {
      setTimeout(() => {
        // Sicherstellen, dass die Elemente existieren, bevor wir sie nutzen
        if (cookieBanner) {
          cookieBanner.classList.add('visible');
          
          // Overlay nur auf Desktop anzeigen
          const isMobile = window.matchMedia("(max-width: 768px)").matches;
          if (!isMobile && cookieOverlay) {
            cookieOverlay.classList.add('visible');
          }
        }
      }, 800); // Verzögerung, damit Benutzer zuerst die Seite sehen können
    } else {
      // Überprüfen, ob Analytics aktiviert werden soll
      try {
        const settings = JSON.parse(consentSaved);
        if (settings && settings.analytics) {
          initializeAnalytics();
        }
      } catch (e) {
        console.error('Fehler beim Parsen der Cookie-Einstellungen:', e);
      }
    }
    
    // Funktion zum Schließen des Banners und Entfernen des Overlays
    function hideBannerAndOverlay() {
      // Null-Check hinzugefügt, um sicherzustellen, dass die Elemente existieren
      if (cookieBanner) {
        cookieBanner.classList.remove('visible');
      }
      
      // Overlay nur entfernen wenn es existiert (auf Desktop)
      const isMobile = window.matchMedia("(max-width: 768px)").matches;
      if (!isMobile && cookieOverlay) {
        cookieOverlay.classList.remove('visible');
      }
    }
    
    // Event-Handler für alle Buttons
    acceptAllBtn.addEventListener('click', (e) => {
      e.preventDefault();
      console.log('Alle Cookies akzeptiert');
      saveConsent(true);
      hideBannerAndOverlay();
      initializeAnalytics();
    });
    
    onlyEssentialBtn.addEventListener('click', (e) => {
      e.preventDefault();
      console.log('Nur notwendige Cookies akzeptiert');
      saveConsent(false);
      hideBannerAndOverlay();
    });
    
    saveSettingsBtn.addEventListener('click', (e) => {
      e.preventDefault();
      const analyticsEnabled = analyticsCheckbox.checked;
      console.log('Cookie-Einstellungen gespeichert:', analyticsEnabled);
      saveConsent(analyticsEnabled);
      hideBannerAndOverlay();
      
      if (analyticsEnabled) {
        initializeAnalytics();
      }
    });
    
    rejectAllBtn.addEventListener('click', (e) => {
      e.preventDefault();
      console.log('Alle Cookies abgelehnt');
      saveConsent(false);
      hideBannerAndOverlay();
    });
    
    // Das Schließen-X entfernen, da der Benutzer eine Entscheidung treffen muss
    closeBtn.style.display = 'none';
    
    // Funktionen zum Speichern der Einwilligung und Initialisieren von Analytics
    function saveConsent(analyticsEnabled){
      const consentData = {
        essential: true,
        analytics: analyticsEnabled,
        timestamp: new Date().toISOString()
      };
      localStorage.setItem('cookie-consent', JSON.stringify(consentData));
    }
    
    function initializeAnalytics(){
      // Sicherstellen, dass dataLayer existiert
      if (!window.dataLayer) {
        window.dataLayer = [];
      }
      
      // Funktion zur Ausführung von GA4-Befehlen definieren
      window.gtag = function() {
        window.dataLayer.push(arguments);
      };
      
      // GA4 initialisieren
      window.gtag('js', new Date());
      
      // Cookiearme Konfiguration
      window.gtag('config', 'G-DPXY96XYN3', {
        'anonymize_ip': true,
        'cookie_flags': 'SameSite=None;Secure',
        'cookie_expires': 28 * 24 * 60 * 60, // 28 Tage in Sekunden
        'client_storage': 'none', // Für cookielose Implementierung
        'allow_google_signals': false,
        'allow_ad_personalization_signals': false
      });
      
      // Google Tag Manager (falls verwendet)
      if (!window.gtmDidInit) {
        window.gtmDidInit = true;
        const scriptGTM = document.createElement('script');
        scriptGTM.type = 'text/javascript';
        scriptGTM.async = true;
        scriptGTM.src = `https://www.googletagmanager.com/gtm.js?id=GTM-WFG6LFSX`;
        document.head.appendChild(scriptGTM);
      }
      
      // GA4 Script laden
      const scriptGA = document.createElement('script');
      scriptGA.async = true;
      scriptGA.src = `https://www.googletagmanager.com/gtag/js?id=G-DPXY96XYN3`;
      document.head.appendChild(scriptGA);
    }
  });
</script>
