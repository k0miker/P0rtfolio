---
import"../css/fonts.css"
---

<div class="flex content-center items-center h-[90vh]">
  <div class="card">
    <div class="header font-[marker]">My Skills</div>
    <div class="body">
      <div class="skill">
        <div class="skill-name html font-[marker]">HTML</div>
        <div class="skill-level">
          <div style="width: 85%" class="skill-percent"></div>
        </div>
      </div>
      <div class="skill">
        <div class="skill-name css font-[marker]">CSS</div>
        <div class="skill-level">
          <div style="width: 70%" class="skill-percent"></div>
        </div>
      </div>
      <div class="skill">
        <div class="skill-name js font-[marker]">JavaScript</div>
        <div class="skill-level">
          <div style="width: 15%" class="skill-percent"></div>
        </div>
      </div>
      <div class="skill">
        <div class="skill-name astro font-[marker]">Astro</div>
        <div class="skill-level">
          <div style="width: 30%" class="skill-percent"></div>
        </div>
      </div>
      <div class="skill">
        <div class="skill-name tailwind font-[marker]">Tailwind</div>
        <div class="skill-level">
          <div style="width: 40%" class="skill-percent"></div>
        </div>
      </div>
      <div class="skill">
        <div class="skill-name github font-[marker]">Github</div>
        <div class="skill-level">
          <div style="width: 35%" class="skill-percent"></div>
        </div>
      </div>
      <div class="skill">
        <div class="skill-name scss font-[marker]">SCSS</div>
        <div class="skill-level">
          <div style="width: 25%" class="skill-percent"></div>
        </div>
      </div>
      <div class="skill">
        <div class="skill-name windows font-[marker]">Windows</div>
        <div class="skill-level">
          <div style="width: 80%" class="skill-percent"></div>
        </div>
      </div>
      <div class="skill">
        <div class="skill-name linux font-[marker]">Linux</div>
        <div class="skill-level">
          <div style="width: 60%" class="skill-percent"></div>
        </div>
      </div>
      <div class="flex wrapper mt-10">
        <i class="fa-brands text-gray-600 fa-html5 "></i>
        <i class="fa-brands text-gray-600 fa-css3"></i>
        <i class="fa-brands text-gray-600 fa-react"></i>
        <i class="fa-brands text-gray-600 fa-js"></i>
        <i class="fa-brands text-gray-600 fa-sass"></i>
        <i class="fa-brands text-gray-600 fa-linux"></i>
        <i class="fa-brands text-gray-600 fa-windows"></i>
        <i class="fa-brands text-gray-600 fa-github"></i>
        <i class="fa-brands fa-node text-gray-600"></i>
      </div>
    </div>
  </div>
</div>

<style>
  .wrapper {
    justify-content: space-between;
    flex-wrap: wrap;
  }
  i {
    font-size: 50px;
    padding: 10px;
  }
  i:nth-of-type(1) {
    animation: rollover 1s ;    
  }
  i:hover {
    transform: scale(1.2);
    transition: 0.5s;
  }
  .card {
    display: flex;
    flex-direction: column;
    max-width: 768px;
    height: fit-content;
    background-color: #ffffffc2;
    box-shadow: 2px 2px 15px rgba(0, 0, 0, 0.384);
    border-radius: 10px;
    overflow: hidden;
    margin-left: auto;
    margin-right: auto;
  }

  .header {
    background-color: #263442c0;
    color: #fff;
    padding: 20px;
    text-align: center;
    font-size: 18px;
  }

  .body {
    padding: 20px;
  }

  .skill {
    display: flex;
    align-items: center;
    justify-content: space-around;
    margin-bottom: 20px;
  }

  .skill-name {
    width: 120px;
    font-size: 16px;
    color: #263442c0;
  }

  .html:hover {
    color: blue;
  }

  .css:hover {
    color: purple;
  }

  .astro:hover {
    color: palevioletred;
  }
  .tailwind:hover {
    color: cyan;
  }
  .github:hover {
    color: grey;
  }
  .scss:hover {
    color: purple;
  }
  .windows:hover {
    color: rgb(0, 140, 255);
  }
  .linux:hover {
    color: darkmagenta;
  }
  
  .skill-level {
    flex-grow: 1;
    height: 10px;
    background-color: #00000000;
    box-shadow: 0 0 5px 0px #333;
    border-radius: 10px;
    overflow: hidden;
    position: relative;
    z-index: 10;
    display: flex;
    align-items: center;
    /* justify-content: center; */
    
  }

  .skill-percent {
    
    position: absolute;
    z-index: 0;    
    background-color: #263442c0;   
    border-radius: 5px;
    height: 100%;
    width: 320px;
    background-color: #263442c0;
    animation: move-arrows 1.5s linear infinite;
    -webkit-animation: move-arrows 1.5s linear infinite;
    transform-origin: left;
    background-image: url("data:image/png;base64,");
    background-size: auto 100%;
  }

  .skill-percent-number {
    margin-left: 20px;
    font-size: 16px;
    color: #263442c0;
  }
  @keyframes fi {
    from {
      opacity: 0;
    }
    to {
      opacity: 1;
    }
  }
  @keyframes move-arrows {
    100% {
      background-position: 20px 0;
    }
  }
  @-webkit-keyframes move-arrows {
    100% {
      background-position: 20px 0;
    }
  }

  @keyframes rollover {
    from {
      scale: 1;
    }
    50%{
      scale: 1.2;
    }
    to{
      scale: 1;
    }
  }
</style>
<script src="https://kit.fontawesome.com/f179aa90d3.js" crossorigin="anonymous"
></script>
