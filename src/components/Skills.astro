---
import "../css/fonts.css";
import "../css/fontawesome/css/fontawesome.css";
import "../css/fontawesome/css/all.min.css";
---

<div class="flex box content-center items-center min-h-[50vh]">
  <div class="card offscreen">
    <div class="header font-[mono] text-[1.5rem] font-extrabold hover:tracking-[.5vw] duration-500">
      My Skills<span class="animate-ping">_</span>
    </div>
    <div class="body">
      <div class="skill">
        <div class="skill-name html font-[mono]">HTML</div>
        <div class="skill-level">
          <div style="width: 65%" class="skill-percent"></div>
        </div>
      </div>
      <div class="skill">
        <div class="skill-name css font-[mono]">CSS</div>
        <div class="skill-level">
          <div style="width: 50%" class="skill-percent"></div>
        </div>
      </div>
      <div class="skill">
        <div class="skill-name js font-[mono]">JavaScript</div>
        <div class="skill-level">
          <div style="width: 15%" class="skill-percent"></div>
        </div>
      </div>
      <div class="skill">
        <div class="skill-name astro font-[mono]">Astro</div>
        <div class="skill-level">
          <div style="width: 30%" class="skill-percent"></div>
        </div>
      </div>
      <div class="skill">
        <div class="skill-name tailwind font-[mono]">Tailwind</div>
        <div class="skill-level">
          <div style="width: 40%" class="skill-percent"></div>
        </div>
      </div>
      <div class="skill">
        <div class="skill-name github font-[mono]">Github</div>
        <div class="skill-level">
          <div style="width: 35%" class="skill-percent"></div>
        </div>
      </div>
      <div class="skill">
        <div class="skill-name scss font-[mono]">SCSS</div>
        <div class="skill-level">
          <div style="width: 25%" class="skill-percent"></div>
        </div>
      </div>
      <div class="skill">
        <div class="skill-name windows font-[mono]">Windows</div>
        <div class="skill-level">
          <div style="width: 80%" class="skill-percent"></div>
        </div>
      </div>
      <div class="skill">
        <div class="skill-name linux font-[mono]">Linux</div>
        <div class="skill-level">
          <div style="width: 60%" class="skill-percent"></div>
        </div>
      </div>
      <div class="flex wrapper mt-10">
        <i class="fa-brands text-gray-600 fa-html5"></i>
        <i class="fa-brands text-gray-600 fa-css3"></i>
        <i class="fa-brands text-gray-600 fa-react"></i>
        <i class="fa-brands text-gray-600 fa-js"></i>
        <i class="fa-brands text-gray-600 fa-sass"></i>
        <i class="fa-brands text-gray-600 fa-linux"></i>
        <i class="fa-brands text-gray-600 fa-windows"></i>
        <i class="fa-brands text-gray-600 fa-github"></i>
        <i class="fa-brands fa-node text-gray-600"></i>
      </div>
    </div>
  </div>
</div>

<style>
  .box {
    padding: 5vw;
    background-image: url("https://images.unsplash.com/photo-1504639725590-34d0984388bd?q=80&w=2574&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D");
    background-size: cover;
    -webkit-animation: slidein 30s;
    animation: slidein 50s;
    background-attachment: fixed;

    -webkit-animation-fill-mode: forwards;
    animation-fill-mode: forwards;

    -webkit-animation-iteration-count: infinite;
    animation-iteration-count: infinite;

    -webkit-animation-direction: alternate;
    animation-direction: alternate;
  }
  .wrapper {
    justify-content: space-between;
    flex-wrap: wrap;
  }
  i {
    font-size: 50px;
    padding: 10px;
  }
  i:hover {
    transform: scale(1.2);
    transition: 0.5s;
  }
  .card {
    display: flex;
    flex-direction: column;
    max-width: 768px;
    height: fit-content;
    background-color: #ffffff;
    box-shadow: 2px 2px 15px rgba(0, 0, 0, 0.384);
    border-radius: 10px;
    overflow: hidden;
    margin-left: auto;
    margin-right: auto;
  }

  .header {
    background-color: #263442c0;
    color: #fff;
    padding: 20px;
    text-align: center;
  }

  .body {
    padding: 20px;
  }

  .skill {
    display: flex;
    align-items: center;
    justify-content: center;
    margin-bottom: 5px;
  }

  .skill-name {
    width: 120px;
    transition: .5s;
    font-size: 16px;
    color: #263442c0;
  }

  .skill-level {
    flex-grow: 1;
    height: 10px;
    background-color: #00000000;
    box-shadow: 0 0 5px 0px #333;
    border-radius: 10px;
    overflow: hidden;
    position: relative;
    z-index: 0;
    display: flex;
  }

  .skill-percent {
    position: absolute;
    z-index: 0;
    transition: .3s;
    background-color: #263442c0;
    border-radius: 5px;
    height: 100%;
    width: 320px;
    background-color: #263442c0;
    animation: move-arrows 2.5s linear infinite;
    -webkit-animation: move-arrows 2.5s linear infinite;
    transform-origin: left;
    background-image: url("data:image/png;base64,");
    background-size: auto 100%;
  }

  .skill-percent-number {
    margin-left: 20px;
    font-size: 16px;
    color: #263442c0;
  }

  i:hover {
    transition: 0.5s;
    color: tomato;
  }

  .card:hover i:nth-of-type(1) {
    animation: rollover2 5s ease-in-out 1;
  }
  .card:hover i:nth-of-type(2) {
    animation: rollover2 5s ease-in-out 1 0.5s;
  }
  .card:hover i:nth-of-type(3) {
    animation: rollover2 5s ease-in-out 1 1s;
  }
  .card:hover i:nth-of-type(4) {
    animation: rollover2 5s ease-in-out 1 1.5s;
  }
  .card:hover i:nth-of-type(5) {
    animation: rollover2 5s ease-in-out 1 2s;
  }
  .card:hover i:nth-of-type(6) {
    animation: rollover2 5s ease-in-out 1 2.5s;
  }
  .card:hover i:nth-of-type(7) {
    animation: rollover2 5s ease-in-out 1 3s;
  }
  .card:hover i:nth-of-type(8) {
    animation: rollover2 5s ease-in-out 1 3.5s;
  }
  .card:hover i:nth-of-type(9) {
    animation: rollover2 5s ease-in-out 1 4s;
  }
  @keyframes rollover2 {
    from {
      color: #333;
      scale: 1;
    }
    10% {
      color: tomato;
      scale: 1.2;
    }
    20% {
      color: #333;
      scale: 1;
    }
  }
  .skill:hover:nth-of-type(1) .skill-percent {
    background-color: rgb(0, 0, 147);
  }
  .skill:hover:nth-of-type(1) .skill-name {
    color: blue;
    scale: 1.5;
    transform: translateX(18px);
  }
  .skill:hover:nth-of-type(2) .skill-percent {
    background-color: purple;
  }
  .skill:hover:nth-of-type(2) .skill-name {
    color: purple;
    scale: 1.5;
    transform: translateX(18px);
  }
  .skill:hover:nth-of-type(3) .skill-percent {
    background-color: tomato;

    
  }
  .skill:hover:nth-of-type(3) .skill-name {
    color: tomato;
    scale: 1.2;
    transform: translateX(2px);
  }
  .skill:hover:nth-of-type(4) .skill-percent {
    background-color: palevioletred;
  }
  .skill:hover:nth-of-type(4) .skill-name {
    color: palevioletred;
    scale: 1.5;
    transform: translateX(18px);
  }
  .skill:hover:nth-of-type(5) .skill-percent {
    background-color: rgb(0, 159, 180);
  }
  .skill:hover:nth-of-type(5) .skill-name {
    color: rgb(0, 159, 180);
    scale: 1.5;
    transform: translateX(12px);
  }

  .skill:hover:nth-of-type(6) .skill-percent {
    background-color: rgb(0, 145, 12);
  }
  .skill:hover:nth-of-type(6) .skill-name {
    color: rgb(0, 145, 12);
    scale: 1.5;
    transform: translateX(18px);
  }
  .skill:hover:nth-of-type(7) .skill-percent {
    background-color: purple;
  }
  .skill:hover:nth-of-type(7) .skill-name {
    color: purple;
    scale: 1.5;
    transform: translateX(18px);
  }
  .skill:hover:nth-of-type(8) .skill-percent {
    background-color: rgb(0, 149, 255);
  }
  .skill:hover:nth-of-type(8) .skill-name {
    color: rgb(0, 149, 255);
    scale: 1.5;
    transform: translateX(18px);
  }
  .skill:hover:nth-of-type(9) .skill-percent {
    background-color: purple;
  }
  .skill:hover:nth-of-type(9) .skill-name {
    color: purple;
    scale: 1.5;
    transform: translateX(18px);
  }
  header {
  }
</style>
