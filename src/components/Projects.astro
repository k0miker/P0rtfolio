  .container {
    display: flex;
    justify-content: center;
    flex-wrap: wrap;
    background-color: rgba(255, 255, 255, 0.527);
    margin-left: auto;
    margin-right: auto;
    padding: 15px;
    padding-bottom: 80px;
    cursor: pointer;

    .box {
      position: relative;
      background-color: rgba(0, 0, 0, 0);
      width: 34%;
      box-shadow: 2px 2px 4px 2px #888;
      max-width: 380px;
      border-radius: 15px;
      overflow: hidden;
      flex-grow: 1;
      img {
        object-fit: contain;
      }
    }
  }
  .modal-content {
    background-color: #fefefe;
    margin: auto auto;
    padding: 20px;
    border: 1px solid #888;
    max-width: 1460px;
    max-height: 600px;
    display: flex;
    width: 100%;
    flex-direction: column;
    align-items: center;
    justify-content: center;

    h1 {
      font-family: mono;
      font-size: 28px;
    }
    p {
      text-align: center;
    }
    a {
      display: flex;
      justify-content: center;
      align-items: center;
    }
    a img:hover {
      scale: 1.05;
      transform: translateY(10px);
    }
  }
  .close {
    color: #aaa;
    float: right;
    font-size: 28px;
    font-weight: bold;
  }

  .close:hover,
  .close:focus {
    color: black;
    text-decoration: none;
    cursor: pointer;
  }
  img {
    max-height: 400px;
    object-fit: cover;
    border-radius: 15px;
    transition: 1s;
    @media screen and (max-width: 768px) {
      width: 100%;
    }
  }
  .box:hover img {
    scale: 2.505;
    cursor: pointer;
  }

  .box .caption {
    transition: 0.5s;
    opacity: 0;
    padding: 10%;
    border-radius: 15px;
    position: fixed;
    top: 0px;
    left: 0px;
    right: 0px;
    bottom: 0px;
  }
  .box:hover .caption {
    transition: 0.5s;
    cursor: pointer;
    opacity: 1;
    color: white;
    border-radius: 15px;
    background-color: #000000dd;
    h1 {
      color: #ff6347;
      font-size: 26px;
    }
    i {
      margin-top: 10px;
      transition: 1s;
      scale: 1.2;
      color: tomato;
    }
  }
  @media screen and (max-width: 768px) {
    .container {
      flex-direction: column;
