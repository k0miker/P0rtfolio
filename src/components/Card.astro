---
const { project, image } = Astro.props;
---

<div class="box m-auto flex items-center w-full offscreen" data-modal-target={project.id}>
  <figcaption>
    {project.isVideo ? (
      <video autoplay loop muted src={project.videoSrc}></video>
    ) : (
      <img src={image.src} alt={project.title} />
    )}
    <div class="caption flex flex-col items-center text-sm md:text-base">
      <h1 class="py-0 text-center">{project.title}</h1>
      <p class="description">{project.description}</p>
      <i class="fa-solid fa-magnifying-glass-plus animate-pulse"></i>
    </div>
  </figcaption>
</div>

<style>
  .box {
    width: 100%;
    max-height: fit-content;
    max-width: fit-content;
    outline: var(--card-outline);
    outline-offset: -1px;
    margin: 25px 10px;
    box-shadow: var(--card-shadow);
    border-radius: 20px;
    overflow: hidden;
    place-self: center;
    padding: -1px;
    scale: 1;
    transition: transform 0.3s ease, box-shadow 0.3s ease, outline 0.3s ease;
    
    &:hover {
      position: relative;
      z-index: 10;
      clip-path: none;
      transform: translateY(-10px);
      transition: .5s;
      animation: pulseShadow 3s infinite 0.5s;           
      outline: var(--card-outline-hover);
      box-shadow: var(--card-shadow-hover);
      
      img,
      video {
        transition: .2s;
      }
    }
    
    img,
    video {
      width: 100%;
      max-width: 100%;
      scale: 1;
      object-fit: cover;
      max-height: 400px;
      border-radius: 15px;

      @media screen and (max-width: 768px) {
        width: 100%;
        max-height: 150px;
        object-fit: cover;
      }
    }
  }

  .box .caption {
    transition: 0.5s;
    opacity: 0;
    padding: 10%;
    border-radius: 15px;
    position: fixed;
    top: 0px;
    left: 0px;
    right: 0px;
    bottom: 0px;

    h1 {
      color: #ff6347;
      font-size: 18px;
    }
    p {
      font-size: 0.7rem;
    }
    i {
      margin-top: 10px;
      transition: 1s;
      color: tomato;
    }
  }
  .box:hover .caption {
    transition: 0.5s;
    cursor: pointer;
    opacity: 1;
    color: white;
    border-radius: 15px;
    background-color: #00000050;
    clip-path: none;
    i {
      scale: 1.2;
    }
  }

  figcaption {
    cursor: pointer;
    h1 {
      font-family: mono;
      font-size: 2.5rem;
      text-shadow: 1px 1px 2px #353535;
    }
  }
.description {
    font-family: inter;
    font-size: 1.2rem;
    color: var(--text-titel);
    text-align: center;
    margin-top: 10px;
    transition: 0.5s;
  }
  .caption {
    justify-content: center;
    cursor: pointer;
    h1,
    p,
    i {
      flex-grow: 1;
    }
    i {
      font-size: x-large;
    }
    i:hover {
      color: tomato;
    }
  }

  @keyframes scaleIn{
    0%{
      transform: scale3d(1, 1, 1);
    }
    10%{
      transform: scale3d(1.3, 1, 1);
    }
    20%{
      transform: scale3d(1.3, 1.3, 1);
    }
    30%{
      transform: scale3d(1.3, 1.3, 1.3);
    } 
    100%{
      transform: scale3d(1.5, 1.5, 1.5);
    }
  }

  @keyframes pulseShadow {
    0% {
      box-shadow: 
        0px 0px 0px 0px var(--pulse-shadow-start),    
        var(--card-shadow);
    }
    50% {
      box-shadow: 
        0px 0px 30px 10px var(--pulse-shadow-mid),
        var(--card-shadow-hover);
      transform: translateY(-12px);
    }
    100% {
      box-shadow: 
        0px 0px 0px 0px var(--pulse-shadow-start),    
        var(--card-shadow);
    }       
  }
  
  /* Light Mode spezifische Anpassungen */
  :root:not(.dark-mode) .box {
    position: relative;
    
    &::after {
      content: '';
      position: absolute;
      inset: 0;
      z-index: -1;
      border-radius: 20px;
      background: white;
      box-shadow: 0 10px 30px rgba(0, 0, 0, 0.15);
      opacity: 0;
      transition: opacity 0.3s;
    }
    
    &:hover::after {
      opacity: 1;
    }
  }
  
  /* Verbesserte Hover-Animation speziell f√ºr Light Mode */
  @media (prefers-color-scheme: light), 
         (prefers-color-scheme: no-preference) {
    :root:not(.dark-mode) .box:hover {
      animation: lightModePulse 3s infinite 0.5s;
    }
  }
  
  @keyframes lightModePulse {
    0% {
      box-shadow: 
        0px 5px 15px rgba(0, 0, 0, 0.1),
        0px 0px 0px 0px rgba(255, 99, 71, 0);
    }
    50% {
      box-shadow: 
        0px 15px 25px rgba(0, 0, 0, 0.15),
        0px 0px 15px 2px rgba(255, 99, 71, 0.4);
    }
    100% {
      box-shadow: 
        0px 5px 15px rgba(0, 0, 0, 0.1),
        0px 0px 0px 0px rgba(255, 99, 71, 0);
    }
  }
</style>
